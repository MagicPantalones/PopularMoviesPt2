<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_fragment"
    android:background="@drawable/bg_bottom_nav"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_main_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_top_round"
        android:fitsSystemWindows="true"
        app:elevation="0dp">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@android:color/transparent"
            app:titleEnabled="false"
            app:layout_scrollFlags="scroll">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_constraint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax">

                <TextView
                    android:id="@+id/tv_movie_title_detail"
                    style="@style/MovieCardStyle.Text.Header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fitsSystemWindows="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Minions" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_backdrop"
                    style="@style/MovieCardStyle.PosterCard"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_movie_title_detail">

                    <ImageView
                        android:id="@+id/iv_poster_detail"
                        android:layout_width="185dp"
                        android:layout_height="278dp"
                        android:scaleType="center"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/minions_poster_placehodler" />
                </android.support.v7.widget.CardView>

            </android.support.constraint.ConstraintLayout>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
    <android.support.constraint.ConstraintLayout
        android:id="@+id/detail_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_top_round"
        >

        <android.support.constraint.Guideline
            android:id="@+id/widget_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8" />

        <TextView
            android:id="@+id/tv_release_date_detail"
            style="@style/MovieCardStyle.Text.Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAllCaps="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="September 17th, 2015" />

        <ProgressBar
            android:id="@+id/pb_vote_count_detail"
            style="@style/MovieCardStyle.VoteBar"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_release_date_detail"
            app:layout_constraintStart_toStartOf="@+id/tv_release_date_detail"
            app:layout_constraintTop_toBottomOf="@+id/tv_release_date_detail" />

        <TextView
            android:id="@+id/tv_vote_average_detail"
            style="@style/MovieCardStyle.Text.Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="@+id/pb_vote_count_detail"
            app:layout_constraintEnd_toEndOf="@+id/pb_vote_count_detail"
            app:layout_constraintHorizontal_bias="0.07"
            app:layout_constraintStart_toStartOf="@+id/pb_vote_count_detail"
            app:layout_constraintTop_toTopOf="@+id/pb_vote_count_detail"
            tools:text="7.5" />

        <FrameLayout
            android:id="@+id/frame_trailers_and_reviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/pb_vote_count_detail"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            />

    </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>

    <ImageView
        android:id="@+id/fav_fab_anim"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:visibility="gone"
        app:layout_anchor="@+id/fav_fab"
        app:layout_anchorGravity="center"
        tools:ignore="ContentDescription" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fav_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitCenter"
        android:theme="@style/Fab"
        app:layout_anchor="@id/detail_widget"
        app:layout_anchorGravity="end|top"
        app:srcCompat="@drawable/ic_heart_fab_static" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_nav_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/selector_bottom_nav"
        app:itemTextColor="@drawable/selector_bottom_nav"
        android:layout_gravity="bottom"
        app:menu="@menu/movie_details_bottom_nav" />

</android.support.design.widget.CoordinatorLayout>