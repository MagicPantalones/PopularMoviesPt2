<resources>

    <!-- Base application theme. -->
    <style name="MovieAppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="MovieCardStyle" parent="MovieAppTheme">
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardBackgroundColor">@color/colorPrimary</item>
    </style>

    <!-- Found a lot of help to make the app compatible with pre lollipop here:
        https://medium.com/@etiennelawlor/layout-tips-for-pre-and-post-lollipop-bcb2e4cdd6b2 -->
    <style name="MovieCardStyle.PosterCard" parent="android:Widget.TextView">
        <!--<item name="android:foreground">@drawable/selector_bg_card</item> _-->
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="MovieCardStyle.Text" parent="MovieCardStyle">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="MovieCardStyle.Text.Normal" parent="MovieCardStyle.Text">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MovieCardStyle.Text.Header" parent="MovieCardStyle.Text">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Fab">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="MovieCardStyle.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="background">@color/colorPrimary</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
